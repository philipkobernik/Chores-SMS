<ul>
    <% @users.each do |user| %>
	<li>
      <h2><%= user.name %></h2>
      <p><%= user.chore.name unless user.chore.nil? %></p>
	  <p class="hidden"><%= link_to 'Edit', edit_user_path(user) %> | <%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></p>
    </li>
	<% end %>

 </ul>

